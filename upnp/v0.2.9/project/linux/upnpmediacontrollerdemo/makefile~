#EXAMPLES C FILES USED
cfiles += $(lib_to_upnp_examples_path)/media_controller_cpdemo_devicetype.c

cmodules := $(patsubst %.c,%,$(cfiles))

modules += $(cpmodules)
modules += $(cmodules)

defines  := $(sort $(defines))

# now set up the object list
blah1 = $(modules:%=%.$(obj))
objects = $(notdir $(blah1))
OBJDIR=./bin
OUT_OBJS = $(addprefix $(OBJDIR)/,$(objects))

#############################################################################
# RULESa
#############################################################################
all: mcdemo.out
$(OBJDIR)/mcdemo.a: $(OUT_OBJS)
$(OBJDIR)/media_controller_demo_main.o : media_controller_demo_main.c
mcdemo.out: $(OBJDIR)/media_controller_demo_main.o $(OBJDIR)/mcdemo.a

include $(UPNP_PATH)/rulesgnu.inc
